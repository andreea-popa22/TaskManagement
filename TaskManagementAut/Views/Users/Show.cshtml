@model TaskManagementAut.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<h3 style="margin-left:2rem;margin-top:10rem;">@ViewBag.Title</h3>
<h3>@ViewBag.message</h3>

<div class="container">
    <div class="row">
        <div class="col-md-6" style="margin-top:2rem;" >
            <div class="panel">
                <div class="panel-heading">Username: @Model.UserName</div>

                <div class="panel-body">

                    <i class="glyphicon glyphicon-envelope"></i> Email: <span class="label label-default">@Model.Email</span>
                    <br />
                    <i class="glyphicon glyphicon-th-list"></i> Role: @ViewBag.roleName

                    <br /><br />

                    @if (@Model.PhoneNumber != null)
                    {
                        <i class="glyphicon glyphicon-phone"></i>@:Telefon utilizator:<span class="label label-default">@Model.PhoneNumber</span>

                    }

                </div>

                @if ((string)Model.Id != ViewBag.utilizatorCurent)
                {
                <div class="panel-footer">
                    @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", routeValues: new { id = @Model.Id }))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <br />
                        <button class="btn btn-success" type="submit">Delete user</button>
                        <a class="btn btn-primary" href="/Users" style="">Back to Users</a>

                    }
                </div>
                }
            </div>
        </div>
        <div class="col-md-6">
            <img src="../../Content/images/human.svg" style="margin-left:-7rem; margin-bottom: -8rem; margin-top: -8rem;" alt="Teamwork" width="670" height="400">
        </div>
    </div>
</div>