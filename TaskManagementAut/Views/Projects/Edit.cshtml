@model TaskManagement.Models.Project


<h2 class="heading-font"  style="margin-left:14rem; margin-bottom: 2rem;">Edit the project</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default radius-div edit-div">

                @using (Html.BeginForm(actionName: "Edit", controllerName: "Projects"))
                {
                    @Html.HttpMethodOverride(HttpVerbs.Put)

                    @Html.HiddenFor(m => m.ProjectId)

                    @Html.Label("ProjectTitle", "Title")
                    <br />
                    @Html.Editor("ProjectTitle")
                    @Html.ValidationMessageFor(m => m.ProjectTitle, "", new { @class = "text-danger" })
                    <br /><br />

                    @Html.Label("ProjectDescription", "Description")
                    <br />
                    @Html.EditorFor(m => m.ProjectDescription)
                    @Html.ValidationMessageFor(m => m.ProjectDescription, "", new { @class = "text-danger" })
                    <br /><br />

                    @Html.Label("ProjectDate", "Starting Date")
                    <br />
                    @Html.EditorFor(m => m.ProjectDate)
                    @Html.ValidationMessageFor(m => m.ProjectDate, "", new { @class = "text-danger" })
                    <br /><br />

                    <label>Select the Team</label>
                    @Html.DropDownListFor(m => m.TeamId,
                        new SelectList(Model.Teamm, "Value", "Text"),
                        "Selectati echipa", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TeamId, "", new { @class = "text-danger" })
                    <br /><br />

                    <button class="btn btn-sm btn-success" type="submit">Edit project</button>

                }

            </div>
        </div>
        <div class="col-md-6">
            <img src="../../Content/images/desk.png" style="margin-left: 2rem; margin-top: 6rem;" alt="Woman standing at a desk" width="380" height="300">
            <a class="btn btn-primary" href="/Projects/Show/@Model.ProjectId" style="margin-left: 27%;">Back to Project</a>
        </div>
    </div>
    
</div>