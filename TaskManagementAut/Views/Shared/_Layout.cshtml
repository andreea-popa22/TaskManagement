<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Righteous&display=swap" rel="stylesheet">
    <title class="theTitle">Amia</title>


    @*<link xhref="~/Content/Site.css?version=1" rel="stylesheet" type="text/css" />*@
    
    @*this works*@
    <link xhref="@Url.Content("~/Content/Site.css?version=@DateTime.Now")" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/Site.css?<?php echo time(); ?>" rel="stylesheet" type="text/css" />*@
    @*<link rel="stylesheet" type="text/css" href="<%= String.Format(" {0}dt={1}",ResolveUrl("~/Content/Site.css"),DateTime.Now.Ticks) %>" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="../Content/images/favicon.ico" type="image/x-icon" />
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Amia", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav nav-font">


                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                        <li>@Html.ActionLink("Teams", "Index", "Teams")</li>
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        <li>@Html.ActionLink("Add a Team", "New", "Teams")</li>

                    }

                    @if (User.IsInRole("User"))
                    {
                        <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                        <li>@Html.ActionLink("Teams", "Index", "Teams")</li>
                        <li>@Html.ActionLink("Add a Project", "New", "Projects")</li>
                    }

                    @if (User.IsInRole("Organizator"))
                    {
                        <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                        <li>@Html.ActionLink("Teams", "Index", "Teams")</li>
                        <li>@Html.ActionLink("Add a Project", "New", "Projects")</li>

                    }
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    <div class="container my-footer-container ">
        @RenderBody()
        
        <footer class="my-footer footer fixed-bottom">
            <p id="footerText">&copy; @DateTime.Now.Year - AMIA. All Rights Reserved. </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>
